---
import {basics} from '@cv'
const {name, label, image, location, profiles, phone, email,} = basics
const {city, region} = location
---

<section>
    <div class="container">
        <div class="info">
            <h1>{name}</h1>
            <h2>{label}</h2>
            <span>
                <!-- robar icono -->
                 {city}, {region}
            </span>
            <footer>
                {
                    email && (
                        <a 
                            href={`mailto:${email}`}
                            title={`Enviar correo a ${name} al correo ${email}`}
                            target="_blank"
                            rel="noopener noreferrer"
                        >
                        ðŸŽˆ        
                        </a>
                    )
                }
            </footer>
        </div>
        <figure>
